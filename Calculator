multiple = 1
choice = input("Would you like to use Multiplication Helper OR Calculator M/C")
def calculator():
    num1= int(input("Enter first number"))
    num2 = int(input("Enter second number"))
    choice2 = input("What would you like to do?")
    if "add" in choice2:
        total = num1 + num2
    if "subtract" in choice2:
        total = num1 - num2
    if "multiply" in choice2:
        total = num1 * num2
    if "divide" in choice2:
        total = num1 / num2
    print(total)
def multiples():
    multiple = int(input("Enter a number"))
    for i in range(1, 13):
        print(multiple, "x", i, "=", multiple * i)
if "C" in choice:
    calculator()
if "M" in choice:
    multiples()
