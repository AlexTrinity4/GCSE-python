def times():
    choice2 = int(input("Enter a number"))
    for i in range(0,12):
        print(choice2, "X", i+1, "=", choice2*(i+1))
        menu()

def adding():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 + num2
    print(num3)
    menu()
    
def multiply():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 * num2
    print(num3)
    menu()

def subtract():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 - num2
    print(num3)
    menu()

def division():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 / num2
    print(num3)
    menu()
    
def MOD():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 % num2
    print(num3)
    menu()

def DIV():
    num1 = int(input("Enter a number"))
    num2 = int(input("Enter a number"))
    num3 = num1 // num2
    print(num3)
    menu()


    
    

def menu():
    for i in range(50):
        print("")
    print("Welcome")
    choice = int(input("0 to exit\n1 for timetables\n2 for adding\n3 for multiplication\n4 for subtraction\n5 for division\n6 for MOD\n7 for DIV"))
    if choice == 0:
        print("bye")
    if choice == 1:
        times()
    if choice ==2:
        adding()
    if choice ==3:
        multiply()
    if choice ==4:
        subtract()
    if choice ==5:
        division()
    if choice ==6:
        MOD()
    if choice == 7:
        DIV()
    if choice > 7:
        print("Incorrect choice you plum, try again")
        menu()
    
password = 4
guess = int(input("Enter pin"))
tries = 5
entrance = False
if guess == password:
    entrance = True
    menu()
    
if guess != password:
    while entrance == False:
        print("Incorrect")
        print("You have" , tries , "remaining")
        guess2 = int(input("Try again"))
        if guess2 != password:
            tries = tries - 1
        if guess2 == password:
            entrance = True
            menu()
        if tries == 0:
            print("bye")
            exit()
        
    
